{{ define "content" -}}
<section class="max-w-4xl mx-auto px-2">
  <h1 class="mb-8 text-3xl">New Recipe</h1>
  {{ if .problems -}}<p class="mb-4 pl-2 border-l-2 border-l-red-700 lg:mb-6">Please correct the following problems.</p>{{- end }}
  <form method="POST">
    <div class="mb-4 lg:mb-6">
      <label class="block mb-1 text-xl after:content-['*'] after:text-red-700" for="recipe-title">Title</label>
      <input class="block w-full p-1 border border-slate-600" id="recipe-title" name="title" required value="{{ .formData.title }}">
      {{- if .problems.title }}
      <p class="mt-2 pl-2 border-l-2 border-l-red-700">{{ .problems.title }}</p>
      {{- end }}
    </div>
    <div class="mb-4 lg:mb-6">
      <label class="block mb-1 text-xl after:content-['*'] after:text-red-700" for="recipe-instructions">Instructions</label>
      <textarea class="block w-full p-1 border border-slate-600" name="instructions" rows="10" required>{{ .formData.instructions }}</textarea>
      {{- if .problems.instructions }}
      <p class="mt-2 pl-2 border-l-2 border-l-red-700">{{ .problems.instructions }}</p>
      {{- end }}
    </div>
    <button class="text-xl italic uppercase border-b-2 border-b-slate-600 transition-all hover:border-b-lime-700 hover:after:content['â†’']" type="submit">Submit</button>
  </form>
</section>
{{- end }}
